<%- include ("../partials/header") %>
<link rel="stylesheet" href="../../public/css/">
<section class="compose">
    <form action="/13" method="post">
        <div class="label">
            <label for="year">Year</label>
            <input type="number" name="year" id="year">
        </div>
        <div class="label">
            <label for="spot">Which Location ?</label>
            <select name="spot" id="">
                <option value="" disabled selected>East or West ?</option>
                <option value="east">East</option>
                <option value="west">West</option>
            </select>
        </div>
        <div class="label">
            <label for="vv">Collision Type (Vehicle)</label>
            <select name="vv" id="vv">
              <option value="" disabled selected>Type of Collision</option>
              <option value="v2v">Vehicle to Vehicle</option>
              <option value="v2p">Vehicle to Pedestrian</option>
              <option value="v2nm">Vehicle to Non-Motorized Vehicle</option>
              <option value="v2a">Vehicle to Animal</option>
            </select>
          </div>
          <div class="label">
            <label for="typec">Nature of Accident</label>
            <select name="typec" id="typec">
              <option value="" disabled selected>Nature of Accident</option>
              <option value="hnr">Hit and Run</option>
              <option value="hwpv">Hit With Parked Vehicle</option>
              <option value="hfb">Hit from Back</option>
              <option value="hfs">Hit from side</option>
              <option value="ror">Run Off Road</option>
              <option value="hwfo">Hit with Fixed Object</option>
              <option value="vo">Vehicle Overturn</option>
              <option value="hoc">Head on Collision</option>
              <option value="others">Others</option>
            </select>
          </div>
<div class="label">
    <label for="type">Type of Accident/Injury</label>
    <select name="type" id="type">
        <option value="" disabled selected>Choose</option>
        <option value="1">Fatal Accident</option>
        <option value="2">Greviously Injured</option>
        <option value="3">Minor Injury</option>
        <option value="4">No Injury</option>
    </select>
</div>
<div class="label">
    <label for="people">Number of people involved</label>
    <select name="people" id="people">
        <option value="" disabled selected>Choose</option>
        <option value="1">Killed</option>
        <option value="2">Grevious Injury</option>
        <option value="3">Minor Injury</option>
    </select>
</div>
<button type="submit">+</button>
</form>
</section>
<%- include("../partials/footer_1") %>

